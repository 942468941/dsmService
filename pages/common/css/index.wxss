.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

.content {
  background: #fff;
}

.common-width {
  width: 87%;
  margin: 0 auto;
}

.btn {
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
}

.btn-normal {
  background: #e2e2e2;
}

.btn-info {
  background-image: linear-gradient(62deg, #41ceac 0%, #8be1be 84%, #99e5c1 100%);
}

.placeholderStyle {
  font-size: 32rpx;
  color: #bfbfbf;
  letter-spacing: 0.91rpx;
}

.img-size {
  width: 100%;
  height: 100%;
}

.flex-style {
  display: flex;
}

